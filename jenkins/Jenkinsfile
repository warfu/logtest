#!/bin/env groovy

pipeline {
    agent {
        docker {
            image 'maven:3.5.0-jdk-8'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
         stage('构建镜像'){
             agent any
             steps {
                      sh "docker build -t log-test:102 ."
            }
        }

    }
}
