pipeline {
    agent {
        docker {
            image 'maven:3.5.3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
      stage('Example Test') {
          agent { docker 'openjdk:8-jre' }
          steps {
              echo 'Hello, JDK'
              sh 'java -version'
          }
      }
    }
}
